{
  "id": "bc-template-dns",
  "description": "Manages the DNS subsystem for the cluster",
  "attributes": {
    "dns": {
      "domain": "pod.your.cloud.org",
      "contact": "support@pod.your.cloud.org",
      "forwarders": [ ],
      "allow_transfer": [ ],
      "nameservers": [ ],
      "static": { }
    }
  },
  "deployment": {
    "dns": {
      "crowbar-revision": 0,
      "element_states": {
        "dns-server": [ "readying", "ready", "applying" ],
        "dns-client": [ "all" ]
      },
      "elements": {},
      "element_order": [
        [ "dns-server" ],
        [ "dns-client" ]
      ],
      "config": {
        "environment": "dns-base-config",
        "mode": "full",
        "transitions": true,
        "transition_list": [
          "discovered"
        ]
      }
    }
  }
}

